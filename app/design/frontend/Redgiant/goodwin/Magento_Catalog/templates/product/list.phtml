                                                        script.text = '{"*":' + mageInit.trim() + '}';
                                                        $(this)[0].appendChild(script);
                                                        $(this).trigger('contentUpdated');
                                                        $(this).removeAttr('data-mage-init');
                                                    }
                                                });
                                                setTimeout(function () {
